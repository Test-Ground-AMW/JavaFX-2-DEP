<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" onKeyPressed="#rootOnKeyPressed" prefHeight="338.0" prefWidth="744.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.dep11.ComboboxController">
   <children>
      <Label layoutX="26.0" layoutY="27.0" text="Combo Box Demo">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <TextField fx:id="txtCountry" layoutX="26.0" layoutY="110.0" onAction="#txtCountryOnAction" prefHeight="24.0" prefWidth="221.0" promptText="Eg:Sri Lanka" />
      <ComboBox fx:id="cbCountry" layoutX="268.0" layoutY="110.0" onAction="#cbCountryOnAction" onKeyPressed="#cbCountryOnKeyPressed" prefHeight="24.0" prefWidth="168.0" promptText="Select a country" />
      <Label layoutX="26.0" layoutY="72.0" text="Enter Country to add" />
      <Label fx:id="lblCountry" alignment="CENTER" layoutX="26.0" layoutY="156.0" prefHeight="59.0" prefWidth="691.0" style="-fx-background-color: lightblue; -fx-background-radius: 10;" text="...">
         <font>
            <Font name="Ubuntu" size="36.0" />
         </font>
      </Label>
      <VBox alignment="CENTER" layoutX="312.0" layoutY="258.0" spacing="10.0">
         <children>
            <Button fx:id="btnRemoveCountry" mnemonicParsing="false" onAction="#btnRemoveCountryOnAction" text="Remove country" />
            <Button fx:id="btnClearCountry" lineSpacing="10.0" mnemonicParsing="false" onAction="#btnClearCountryOnAction" prefHeight="24.0" prefWidth="125.0" text="Clear country" />
         </children>
      </VBox>
   </children>
</AnchorPane>
